{
  "name": "@ai-agent/backend",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "node-env=development"
            ]
          }
        }
      },
      "serve": {
        "executor": "nx:run-commands",
        "defaultConfiguration": "development",
        "options": {
          "command": "bash docker-start.sh",
          "cwd": "apps/backend"
        },
        "configurations": {
          "development": {
            "command": "bash docker-dev-start.sh",
            "cwd": "apps/backend"
          },
          "production": {
            "command": "docker-compose -f apps/backend/docker-compose.yml up --build -d",
            "cwd": "."
          },
          "docker-dev": {
            "command": "docker-compose -f apps/backend/docker-compose.dev.yml up --build",
            "cwd": "."
          }
        }
      },
      "serve-local": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@ai-agent/backend:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@ai-agent/backend:build:development"
          },
          "production": {
            "buildTarget": "@ai-agent/backend:build:production"
          }
        }
      },
      "serve-dev": {
        "executor": "nx:run-commands",
        "options": {
          "command": "nodemon --config nodemon.json",
          "cwd": "apps/backend"
        }
      },
      "docker-stop": {
        "executor": "nx:run-commands",
        "options": {
          "command": "docker-compose down",
          "cwd": "apps/backend"
        }
      },
      "docker-logs": {
        "executor": "nx:run-commands",
        "options": {
          "command": "docker-compose logs -f",
          "cwd": "apps/backend"
        }
      },
      "db-migrate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "prisma migrate deploy",
          "cwd": "apps/backend"
        }
      },
      "db-generate": {
        "executor": "nx:run-commands",
        "options": {
          "command": "prisma generate",
          "cwd": "apps/backend"
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  },
  "dependencies": {
    "@prisma/client": "^6.8.2"
  }
}
